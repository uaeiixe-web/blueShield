import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { MapPin, Plus } from "lucide-react";
import { toast } from "sonner";

import ZoneCard from "../components/zones/ZoneCard";
import ZoneForm from "../components/zones/ZoneForm";

export default function Zones() {
  const [showForm, setShowForm] = useState(false);
  const [editingZone, setEditingZone] = useState(null);
  const queryClient = useQueryClient();

  const { data: zones, isLoading } = useQuery({
    queryKey: ['zones'],
    queryFn: () => base44.entities.Zone.list('-created_date'),
    initialData: [],
  });

  const createZoneMutation = useMutation({
    mutationFn: (zoneData) => base44.entities.Zone.create(zoneData),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['zones'] });
      setShowForm(false);
      toast.success("Zone created successfully");
    },
  });

  const updateZoneMutation = useMutation({
    mutationFn: ({ id, zoneData }) => base44.entities.Zone.update(id, zoneData),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['zones'] });
      setShowForm(false);
      setEditingZone(null);
      toast.success("Zone updated successfully");
    },
  });

  const deleteZoneMutation = useMutation({
    mutationFn: (id) => base44.entities.Zone.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['zones'] });
      toast.success("Zone deleted successfully");
    },
  });

  const handleSubmit = (zoneData) => {
    if (editingZone) {
      updateZoneMutation.mutate({ id: editingZone.id, zoneData });
    } else {
      createZoneMutation.mutate(zoneData);
    }
  };

  const handleEdit = (zone) => {
    setEditingZone(zone);
    setShowForm(true);
  };

  const handleDelete = (zoneId) => {
    if (confirm("Are you sure you want to delete this zone?")) {
      deleteZoneMutation.mutate(zoneId);
    }
  };

  const handleCancel = () => {
    setShowForm(false);
    setEditingZone(null);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 p-6 md:p-8">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div>
            <h1 className="text-3xl font-bold text-slate-900 mb-2">Monitoring Zones</h1>
            <p className="text-slate-600">Manage restricted areas and access controls</p>
          </div>
          <Button
            onClick={() => setShowForm(!showForm)}
            className="bg-blue-600 hover:bg-blue-700 flex items-center gap-2"
          >
            <Plus className="w-4 h-4" />
            Add New Zone
          </Button>
        </div>

        {/* Zone Form */}
        {showForm && (
          <ZoneForm
            zone={editingZone}
            onSubmit={handleSubmit}
            onCancel={handleCancel}
          />
        )}

        {/* Zones Grid */}
        {isLoading ? (
          <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[1, 2, 3].map((i) => (
              <div key={i} className="h-64 bg-white rounded-xl animate-pulse" />
            ))}
          </div>
        ) : zones.length === 0 ? (
          <div className="text-center py-16 bg-white rounded-xl border-2 border-dashed border-slate-200">
            <MapPin className="w-16 h-16 text-slate-300 mx-auto mb-4" />
            <h3 className="text-xl font-semibold text-slate-700 mb-2">No zones configured</h3>
            <p className="text-slate-500 mb-6">Create your first monitoring zone to start tracking</p>
            <Button onClick={() => setShowForm(true)} className="bg-blue-600 hover:bg-blue-700">
              <Plus className="w-4 h-4 mr-2" />
              Create Zone
            </Button>
          </div>
        ) : (
          <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {zones.map((zone) => (
              <ZoneCard
                key={zone.id}
                zone={zone}
                onEdit={handleEdit}
                onDelete={handleDelete}
              />
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
